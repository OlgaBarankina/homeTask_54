<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Green"
        app:layout_constraintBottom_toBottomOf="@+id/btBlue"
        app:layout_constraintStart_toEndOf="@+id/btBlue"
        app:layout_constraintTop_toTopOf="@+id/btBlue"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Red"
        app:layout_constraintBottom_toBottomOf="@+id/btGreen"
        app:layout_constraintStart_toEndOf="@+id/btGreen"
        app:layout_constraintTop_toTopOf="@+id/btGreen"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Orange"
        app:layout_constraintBottom_toBottomOf="@+id/btRed"
        app:layout_constraintStart_toEndOf="@+id/btRed"
        app:layout_constraintTop_toTopOf="@+id/btRed"
        app:layout_constraintVertical_bias="0.0" />

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGreen">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>